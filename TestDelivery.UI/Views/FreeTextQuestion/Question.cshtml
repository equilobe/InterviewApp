@model TestDelivery.UI.ViewModels.TestQuestionModel

@{
    Layout = null;
}
<link type="text/css" rel="stylesheet" href="~/Content/themes/le-frog/jquery.ui.progressbar.css" />
<link type="text/css" rel="stylesheet" href="~/Content/themes/le-frog/jquery.ui.all.css" />

<script src="~/Scripts/ProgressBar.js" type="text/javascript"></script>


<style type="text/css">
    .ui-progressbar {
        position: relative;
    }

    .pblabel {
        position: absolute;
        width: 100%;
        text-align: center;
        line-height: 1.9em;
        color: #fff;
        font-size: small;
        font-weight: 700;
    }

    #progressbar {
        background-color: #3aa835;
        color: #f00;
        height: 20px;
        width: 200px;
    }

    .timeClass {
        font-family: arial,verdana,helvetica,sans-serif;
        font-weight: normal;
        font-size: 10pt;
    }
</style>

<div id="progressbar" data-value="@Model.QuestionNumber" data-max="@Model.QuestionCount">
    <span class="pblabel"></span>
</div>
<p>
    Time remaining for this question: <span id="theTime" class="timeClass"></span>
</p>
<p>
    Total test time remaining: <span id="testTime" data-testTimePassed="@Model.TestTimePassed" data-testTimeLimit="@Model.TestTimeLimit"></span>
</p>

<div id="question" class="question" data-TimeLimit="@Model.Question.TimeLimit" data-timePassed="@Model.TimePassed">
    <p>
        @Model.Question.Summary
    </p>
</div>
@{var buttonText = (Model.QuestionNumber == Model.QuestionCount) ? "Finish" : "Next";}
<input id="answer" type="text" />
<input type="button" onclick="Test.goNextWithAnswer();" value="@buttonText" />

